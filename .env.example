# Stealth VPN Server Configuration
# Copy this file to .env and update with your values

# ============================================================================
# REQUIRED CONFIGURATION
# ============================================================================

# Domain Configuration
DOMAIN=your-domain.com
EMAIL=admin@your-domain.com

# Admin Panel Configuration
ADMIN_USERNAME=admin
# Generate password hash using: python3 admin-panel/setup_admin.py your-password
ADMIN_PASSWORD_HASH=
# Generate session secret using: python3 -c "import secrets; print(secrets.token_hex(32))"
SESSION_SECRET=

# ============================================================================
# VPN SERVICE PORTS (Internal - Do not expose directly)
# ============================================================================

# Xray Ports
XRAY_VISION_PORT=8001
XRAY_WEBSOCKET_PORT=8004

# Trojan Port
TROJAN_PORT=8002

# Sing-box Ports
SINGBOX_SHADOWTLS_PORT=8003
SINGBOX_HYSTERIA_PORT=8005
SINGBOX_TUIC_PORT=8006

# WireGuard Ports
WIREGUARD_SERVER_PORT=51820
WIREGUARD_WEBSOCKET_PORT=8006

# Admin Panel Port
ADMIN_PANEL_PORT=8010

# ============================================================================
# NETWORK CONFIGURATION
# ============================================================================

# VPN Subnet (change if conflicts with your network)
VPN_SUBNET=10.66.66.0/24

# DNS Servers for VPN clients
DNS_SERVERS=1.1.1.1,8.8.8.8

# Timezone
TZ=UTC

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Rate Limiting
RATE_LIMIT_ADMIN=5      # Admin panel requests per minute
RATE_LIMIT_VPN=1000     # VPN connection requests per minute

# Session Configuration
SESSION_TIMEOUT=3600    # Session timeout in seconds (1 hour)

# ============================================================================
# OBFUSCATION CONFIGURATION
# ============================================================================

# Endpoint Rotation
ROTATE_ENDPOINTS=false
ROTATION_INTERVAL_HOURS=24

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log Retention
LOG_RETENTION_DAYS=7
LOG_MAX_SIZE=10M
LOG_MAX_FILES=3

# ============================================================================
# FLASK CONFIGURATION
# ============================================================================

FLASK_ENV=production
FLASK_APP=app.py

# ============================================================================
# DEVELOPMENT/TESTING (Do not use in production)
# ============================================================================

DEVELOPMENT_MODE=false
USE_SELF_SIGNED_CERTS=false
DEBUG=false