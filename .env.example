# Multi-Protocol Proxy Server Configuration
# Copy this file to .env and update with your values

# ============================================================================
# REQUIRED CONFIGURATION
# ============================================================================

# Domain Configuration
DOMAIN=your-domain.com
EMAIL=admin@your-domain.com

# Admin Panel Configuration
ADMIN_USERNAME=admin
# Generate password hash using: python3 admin-panel/setup_admin.py your-password
ADMIN_PASSWORD_HASH=
# Generate session secret using: python3 -c "import secrets; print(secrets.token_hex(32))"
SESSION_SECRET=

# ============================================================================
# PROXY SERVICE PORTS (Internal - Do not expose directly)
# ============================================================================

# Proxy-A Ports (Xray)
PROXY_A_VISION_PORT=8001
PROXY_A_WEBSOCKET_PORT=8004

# Proxy-B Port (Trojan)
PROXY_B_PORT=8002

# Proxy-C Ports (Sing-box)
PROXY_C_SHADOWTLS_PORT=8003
PROXY_C_HYSTERIA_PORT=8005
PROXY_C_TUIC_PORT=8006

# Proxy-D Ports (WireGuard)
PROXY_D_SERVER_PORT=51820
PROXY_D_WEBSOCKET_PORT=8006

# Web Interface Port
WEB_PORT=8010

# ============================================================================
# NETWORK CONFIGURATION
# ============================================================================

# Proxy Subnet (change if conflicts with your network)
PROXY_SUBNET=10.66.66.0/24

# DNS Servers for proxy clients
DNS_SERVERS=1.1.1.1,8.8.8.8

# Timezone
TZ=UTC

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Rate Limiting
RATE_LIMIT_ADMIN=5      # Admin panel requests per minute
RATE_LIMIT_PROXY=1000   # Proxy connection requests per minute

# Session Configuration
SESSION_TIMEOUT=3600    # Session timeout in seconds (1 hour)

# ============================================================================
# OBFUSCATION CONFIGURATION
# ============================================================================

# Endpoint Rotation
ROTATE_ENDPOINTS=false
ROTATION_INTERVAL_HOURS=24

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log Retention
LOG_RETENTION_DAYS=7
LOG_MAX_SIZE=10M
LOG_MAX_FILES=3

# ============================================================================
# FLASK CONFIGURATION
# ============================================================================

FLASK_ENV=production
FLASK_APP=app.py

# ============================================================================
# RESOURCE LIMITS (Auto-detected during installation)
# ============================================================================

# Detected System Resources (populated by install.sh)
CPU_CORES=2
RAM_MB=2048

# Calculated Resource Limits per Service
# Based on 80% CPU and 70% RAM allocation across all services
# These values are automatically calculated during installation
CPU_LIMIT_PER_SERVICE=0.27
RAM_LIMIT_PER_SERVICE=239M

# ============================================================================
# DEVELOPMENT/TESTING (Do not use in production)
# ============================================================================

DEVELOPMENT_MODE=false
USE_SELF_SIGNED_CERTS=false
DEBUG=false